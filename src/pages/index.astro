---
import { SITE_TEXT } from '../content/site-text.js';
const T = SITE_TEXT.landing;
const M = SITE_TEXT.modals;
---

<html lang="en">
<head>
  <meta charset="utf-8" />
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>{T.page_title}</title>

  <link rel="manifest" href="/manifest.json" />
  <meta name="theme-color" content="#010214" />
  <meta name="description" content={T.meta_description} />

  <meta name="apple-mobile-web-app-capable" content="yes" />
  <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent" />
  <meta name="apple-mobile-web-app-title" content="Skein" />
  <link rel="apple-touch-icon" href="/icon-192.png" />

  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link href="https://fonts.googleapis.com/css2?family=Cinzel:wght@400;600;700&family=Cormorant+Garamond:ital,wght@0,400;0,500;1,400&display=swap" rel="stylesheet" />

  <script is:inline>
    if ('serviceWorker' in navigator) {
      window.addEventListener('load', () => {
        navigator.serviceWorker.register('/sw.js')
          .then(() => console.log('Skein Sanctuary: Online'))
          .catch(() => {});
      });
    }
  </script>

  <style is:inline>
    /* ============================================================
       CELESTIAL DESIGN SYSTEM — matches the Unreal app palette
       ============================================================ */
    :root {
      --bg:           #010214;
      --surface1:     #05081f;
      --surface2:     #0a0e2a;
      --border:       rgba(80, 90, 180, 0.18);
      --border-gold:  rgba(132, 107, 45, 0.45);
      --gold:         #845f2d;
      --gold-bright:  #c8a44a;
      --action:       #1e1461;
      --text-primary: #ebebf7;
      --text-muted:   #7a7fa8;
      --text-faint:   #3d4168;

      --font-display: 'Cinzel', serif;
      --font-body:    'Cormorant Garamond', serif;
    }

    *, *::before, *::after { box-sizing: border-box; margin: 0; padding: 0; }

    html, body {
      background: var(--bg);
      color: var(--text-primary);
      font-family: var(--font-body);
      font-size: 16px;
      min-height: 100%;
    }

    /* ---- LAYOUT ---- */
    .page {
      min-height: 100vh;
      display: flex;
      flex-direction: column;
      align-items: center;
      padding: 60px 24px 40px;
    }

    main {
      width: 100%;
      max-width: 540px;
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: 0;
    }

    /* ---- HERO ---- */
    .hero {
      display: flex;
      flex-direction: column;
      align-items: center;
      text-align: center;
      padding-bottom: 40px;
      width: 100%;
    }

    .logo-wrap {
      position: relative;
      margin-bottom: 28px;
    }
    .logo-glow {
      position: absolute;
      inset: -20px;
      background: radial-gradient(circle, rgba(200, 164, 74, 0.12) 0%, transparent 70%);
      pointer-events: none;
    }
    .logo {
      position: relative;
      z-index: 1;
      width: 180px;
      height: 180px;
      object-fit: contain;
      filter: drop-shadow(0 0 24px rgba(200, 164, 74, 0.25));
    }

    .wordmark {
      font-family: var(--font-display);
      font-size: clamp(40px, 10vw, 64px);
      font-weight: 700;
      letter-spacing: 0.36em;
      color: var(--gold-bright);
      text-transform: uppercase;
      margin-bottom: 12px;
    }

    .tagline {
      font-family: var(--font-body);
      font-style: italic;
      font-size: clamp(14px, 3vw, 17px);
      color: var(--text-muted);
      line-height: 1.6;
      max-width: 380px;
      letter-spacing: 0.02em;
    }

    /* ---- DIVIDER ---- */
    .divider {
      width: 100%;
      border: none;
      border-top: 1px solid var(--border-gold);
      margin: 36px 0;
      opacity: 0.5;
    }

    /* ---- BUTTONS ---- */
    .cta-row {
      display: flex;
      flex-direction: column;
      gap: 12px;
      width: 100%;
      max-width: 320px;
      margin-bottom: 48px;
    }
    @media (min-width: 480px) {
      .cta-row { flex-direction: row; max-width: 100%; }
      .cta-row a { flex: 1; }
    }

    .btn-primary {
      display: block;
      text-align: center;
      padding: 14px 24px;
      background: var(--action);
      border: 1px solid var(--border-gold);
      color: var(--gold-bright);
      font-family: var(--font-display);
      font-size: 10px;
      font-weight: 600;
      letter-spacing: 0.22em;
      text-transform: uppercase;
      text-decoration: none;
      cursor: pointer;
      transition: background 0.2s;
    }
    .btn-primary:hover { background: #2a1d85; }

    .btn-ghost {
      display: block;
      text-align: center;
      padding: 14px 24px;
      background: transparent;
      border: 1px solid var(--border);
      color: var(--text-muted);
      font-family: var(--font-display);
      font-size: 10px;
      letter-spacing: 0.18em;
      text-transform: uppercase;
      text-decoration: none;
      cursor: pointer;
      transition: border-color 0.2s, color 0.2s;
    }
    .btn-ghost:hover {
      border-color: var(--border-gold);
      color: var(--gold-bright);
    }

    /* ---- FEATURE GRID ---- */
    .features {
      width: 100%;
      border-top: 1px solid var(--border);
      padding-top: 36px;
      display: grid;
      grid-template-columns: 1fr;
      gap: 28px;
      margin-bottom: 48px;
    }
    @media (min-width: 480px) {
      .features { grid-template-columns: repeat(3, 1fr); gap: 0; }
    }

    .feature {
      text-align: center;
      padding: 0 12px;
    }
    @media (min-width: 480px) {
      .feature + .feature { border-left: 1px solid var(--border); }
    }

    .feature-title {
      font-family: var(--font-display);
      font-size: 10px;
      font-weight: 600;
      letter-spacing: 0.3em;
      color: var(--gold-bright);
      text-transform: uppercase;
      margin-bottom: 8px;
    }
    .feature-subtitle {
      font-family: var(--font-display);
      font-size: 8px;
      letter-spacing: 0.18em;
      color: var(--text-faint);
      text-transform: uppercase;
      line-height: 1.6;
    }

    /* ---- BETA SIGNUP ---- */
    .beta-section {
      width: 100%;
      border: 1px solid var(--border-gold);
      background: var(--surface1);
      padding: 40px 32px;
      margin-bottom: 48px;
      text-align: center;
    }
    .beta-eyebrow {
      font-family: var(--font-display);
      font-size: 9px;
      letter-spacing: 0.36em;
      color: var(--gold);
      text-transform: uppercase;
      margin-bottom: 16px;
    }
    .beta-headline {
      font-family: var(--font-display);
      font-size: clamp(18px, 4vw, 24px);
      font-weight: 600;
      letter-spacing: 0.12em;
      color: var(--text-primary);
      margin-bottom: 12px;
    }
    .beta-body {
      font-family: var(--font-body);
      font-style: italic;
      font-size: 15px;
      color: var(--text-muted);
      line-height: 1.6;
      max-width: 380px;
      margin: 0 auto 28px;
    }
    .btn-beta {
      display: inline-block;
      padding: 16px 40px;
      background: var(--action);
      border: 1px solid var(--gold-bright);
      color: var(--gold-bright);
      font-family: var(--font-display);
      font-size: 11px;
      font-weight: 600;
      letter-spacing: 0.26em;
      text-transform: uppercase;
      text-decoration: none;
      cursor: pointer;
      transition: background 0.2s, box-shadow 0.2s;
      box-shadow: 0 0 24px rgba(200, 164, 74, 0.1);
    }
    .btn-beta:hover {
      background: #2a1d85;
      box-shadow: 0 0 32px rgba(200, 164, 74, 0.2);
    }

    /* ---- FOOTER ---- */
    footer {
      width: 100%;
      max-width: 540px;
      border-top: 1px solid var(--border);
      padding-top: 28px;
      margin-top: auto;
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: 16px;
    }

    .footer-nav {
      display: flex;
      flex-wrap: wrap;
      justify-content: center;
      gap: 24px;
      list-style: none;
    }

    .footer-nav a,
    .footer-nav button {
      font-family: var(--font-display);
      font-size: 8px;
      letter-spacing: 0.2em;
      color: var(--text-faint);
      text-transform: uppercase;
      text-decoration: none;
      background: none;
      border: none;
      cursor: pointer;
      transition: color 0.2s;
      padding: 0;
    }
    .footer-nav a:hover,
    .footer-nav button:hover { color: var(--gold-bright); }
    .footer-nav .accent { color: rgba(200, 164, 74, 0.5); }
    .footer-nav .accent:hover { color: var(--gold-bright); }

    .footer-copy {
      font-family: var(--font-display);
      font-size: 7px;
      letter-spacing: 0.4em;
      color: var(--text-faint);
      opacity: 0.5;
      text-transform: uppercase;
    }

    /* ---- MODALS ---- */
    dialog {
      background: var(--surface1);
      border: 1px solid var(--border-gold);
      padding: 32px;
      max-width: 400px;
      width: 90%;
      color: var(--text-primary);
      outline: none;
    }
    dialog::backdrop {
      background: rgba(1, 2, 20, 0.85);
      backdrop-filter: blur(4px);
    }
    dialog:not([open]) { display: none; }

    .modal-title {
      font-family: var(--font-display);
      font-size: 11px;
      font-weight: 600;
      letter-spacing: 0.22em;
      color: var(--gold-bright);
      text-transform: uppercase;
      margin-bottom: 16px;
    }
    .modal-body {
      font-family: var(--font-body);
      font-size: 15px;
      color: var(--text-muted);
      line-height: 1.6;
      margin-bottom: 24px;
    }
    .modal-close {
      font-family: var(--font-display);
      font-size: 8px;
      letter-spacing: 0.2em;
      color: var(--text-faint);
      text-transform: uppercase;
      background: none;
      border: none;
      cursor: pointer;
      transition: color 0.2s;
      padding: 0;
    }
    .modal-close:hover { color: var(--gold-bright); }
  </style>
</head>

<body>
<div class="page">

  <main>
    <!-- Hero -->
    <section class="hero">
      <div class="logo-wrap">
        <div class="logo-glow"></div>
        <img src="/logo.png" alt="Skein Logo" class="logo" width="180" height="180" />
      </div>
      <div class="wordmark">{T.wordmark}</div>
      <p class="tagline">
        {T.tagline}<br />{T.tagline2}
      </p>
    </section>

    <!-- CTAs -->
    <div class="cta-row">
      <a href={T.cta_primary_url} target="_blank" rel="noopener noreferrer" class="btn-primary">
        {T.cta_primary}
      </a>
    </div>

    <!-- Feature columns -->
    <div class="features">
      {T.features.map(f => (
        <div class="feature">
          <div class="feature-title">{f.title}</div>
          <div class="feature-subtitle">{f.subtitle}</div>
        </div>
      ))}
    </div>

    <!-- Beta Signup -->
    <div class="beta-section">
      <div class="beta-eyebrow">◈ Now in Beta ◈</div>
      <div class="beta-headline">Join the Inner Circle</div>
      <p class="beta-body">
        Be among the first seekers to shape Skein. Sign up for early access and help forge the sanctuary.
      </p>
      <a
        href="https://forms.office.com/Pages/ResponsePage.aspx?id=DQSIkWdsW0yxEjajBLZtrQAAAAAAAAAAAAMAAah_UNpUMlZDV09DWklGVU1WMlpMQ09FTlhOWTAyTy4u"
        target="_blank"
        rel="noopener noreferrer"
        class="btn-beta"
      >
        Request Beta Access
      </a>
    </div>
  </main>

  <!-- Footer -->
  <footer>
    <nav>
      <ul class="footer-nav">
        <li>
          <button onclick="document.getElementById('privacy-modal').showModal()">
            Privacy Covenant
          </button>
        </li>
        <li>
          <button onclick="document.getElementById('sovereignty-modal').showModal()">
            Sovereignty Promise
          </button>
        </li>
        <li>
          <a href={T.footer_bug_url} target="_blank" rel="noopener noreferrer" class="accent">
            Report a Glitch
          </a>
        </li>
      </ul>
    </nav>
    <p class="footer-copy">{T.footer_built_on}</p>
  </footer>

</div>

<!-- Privacy Modal -->
<dialog id="privacy-modal">
  <div class="modal-title">{M.privacy.title}</div>
  <p class="modal-body">{M.privacy.body}</p>
  <button class="modal-close" onclick="this.closest('dialog').close()">Close</button>
</dialog>

<!-- Sovereignty Modal -->
<dialog id="sovereignty-modal">
  <div class="modal-title">{M.sovereignty.title}</div>
  <p class="modal-body">{M.sovereignty.body}</p>
  <button class="modal-close" onclick="this.closest('dialog').close()">Close</button>
</dialog>

</body>
</html>
