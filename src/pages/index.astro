---
// src/pages/app/index.astro
// Standalone version - No imports to prevent build failures
export const partial = true; 
---
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0, viewport-fit=cover">
  <title>Skein — Sanctuary Login</title>
  
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link href="https://fonts.googleapis.com/css2?family=Cinzel:wght@400;600;700&family=Cormorant+Garamond:ital,wght@0,400;0,500;1,400&display=swap" rel="stylesheet">

  <style is:inline>
    :root {
      --bg: #010214; --surface1: #05081f; --surface2: #0a0e2a; 
      --gold: #845f2d; --gold-bright: #c8a44a; --action: #1e1461;
      --text-primary: #ebebf7; --text-muted: #7a7fa8;
      --font-display: 'Cinzel', serif; --font-body: 'Cormorant Garamond', serif;
    }
    body { background: var(--bg); color: var(--text-primary); font-family: var(--font-body); margin: 0; overflow: hidden; }
    #app-container { height: 100vh; display: flex; flex-direction: column; max-width: 480px; margin: 0 auto; }
    .screen { display: none; flex-direction: column; flex: 1; padding: 2rem; }
    .screen.active { display: flex; }
    .input-wrap { margin-bottom: 1.5rem; }
    label { font-family: var(--font-display); font-size: 10px; color: var(--gold-bright); letter-spacing: 0.1em; display: block; margin-bottom: 0.5rem; }
    input { width: 100%; background: var(--surface2); border: 1px solid rgba(80, 90, 180, 0.2); color: white; padding: 1rem; border-radius: 4px; outline: none; box-sizing: border-box; }
    .btn-celestial { background: var(--action); color: var(--gold-bright); border: 1px solid var(--gold); padding: 1rem; font-family: var(--font-display); cursor: pointer; text-transform: uppercase; letter-spacing: 0.2em; font-size: 12px; }
    #error-msg { color: #ff4d4d; font-size: 0.85rem; text-align: center; margin-top: 1rem; display: none; }
  </style>
</head>
<body>
  <div id="app-container">
    <div id="screen-login" class="screen active">
      <div style="text-align:center; margin: 4rem 0;">
        <h1 style="font-family: var(--font-display); color: var(--gold); letter-spacing: 0.4em;">SKEIN</h1>
      </div>
      <div class="input-wrap">
        <label>Seeker Identity</label>
        <input type="email" id="user-email" placeholder="email@sanctuary.com">
      </div>
      <div class="input-wrap">
        <label>Keyphrase</label>
        <input type="password" id="user-pass" placeholder="••••••••">
      </div>
      <button class="btn-celestial" id="auth-btn" onclick="handleAuth()">Authorize Entry</button>
      <p id="error-msg"></p>
    </div>

    <div id="screen-dashboard" class="screen">
      <h2 style="font-family: var(--font-display); color: var(--gold);">Sanctuary Dashboard</h2>
      <div id="thread-list" style="margin-top: 2rem;">
         <p style="color: var(--text-muted); text-align: center; font-style: italic;">The Threads of Fate are loading...</p>
      </div>
      <button class="btn-celestial" onclick="localStorage.removeItem('skein_session'); location.reload();" style="margin-top: auto;">Disconnect</button>
    </div>
  </div>

  <script is:inline>
    // Fixed API URL
    const API_URL = 'https://yjgpdnscte.execute-api.us-east-1.amazonaws.com/prod'; 

    function navigateTo(id) {
      document.querySelectorAll('.screen').forEach(s => s.classList.remove('active'));
      document.getElementById(`screen-${id}`).classList.add('active');
    }

    async function handleAuth() {
      const email = document.getElementById('user-email').value;
      const btn = document.getElementById('auth-btn');
      if (!email) { showError("Identify yourself, seeker."); return; }

      btn.textContent = "Verifying...";
      try {
        const response = await fetch(API_URL);
        if (response.ok) {
          localStorage.setItem('skein_session', email);
          navigateTo('dashboard');
        } else {
          showError("Access Denied.");
        }
      } catch (err) {
        showError("Network Error.");
      } finally {
        btn.textContent = "Authorize Entry";
      }
    }

    function showError(msg) {
      const e = document.getElementById('error-msg');
      e.textContent = msg; e.style.display = 'block';
    }

    window.onload = () => {
      if (localStorage.getItem('skein_session')) navigateTo('dashboard');
    };
  </script>
</body>
</html>
