---
// src/pages/grimoire.astro
layout: null
---
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0, viewport-fit=cover">
  <title>Skein — Grimoire</title>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link href="https://fonts.googleapis.com/css2?family=Cinzel:wght@400;600;700&family=Cormorant+Garamond:ital,wght@0,400;0,500;1,400&display=swap" rel="stylesheet">

  <style is:inline>
    :root {
      --bg: #010214; --surface1: #05081f; --surface2: #0a0e2a; --surface3: #0f1535;
      --border: rgba(80, 90, 180, 0.18); --border-gold: rgba(132, 107, 45, 0.45);
      --gold: #845f2d; --gold-bright: #c8a44a; --action: #1e1461;
      --text-primary: #ebebf7; --text-muted: #7a7fa8; --text-faint: #3d4168;
      --font-display: 'Cinzel', serif; --font-body: 'Cormorant Garamond', serif;
    }

    * { box-sizing: border-box; margin: 0; padding: 0; }
    html, body { height: 100%; background: var(--bg); color: var(--text-primary); font-family: var(--font-body); overflow: hidden; }

    #app { height: 100%; display: flex; flex-direction: column; max-width: 480px; margin: 0 auto; position: relative; }
    .screen { display: none; flex-direction: column; flex: 1; overflow: hidden; padding: 24px; }
    .screen.active { display: flex; }

    .btn-primary { 
      width: 100%; padding: 14px; background: var(--action); border: 1px solid var(--border-gold); 
      color: var(--gold-bright); font-family: var(--font-display); font-size: 11px; cursor: pointer; 
    }
    input { 
      width: 100%; background: var(--surface2); border: 1px solid var(--border); 
      color: var(--text-primary); padding: 12px; margin-bottom: 16px; outline: none; 
    }
  </style>
</head>
<body>
  <div id="app">
    <div id="screen-login" class="screen">
      <div style="text-align: center; margin-bottom: 40px; margin-top: 40px;">
        <img src="/logo.png" style="width: 100px; filter: drop-shadow(0 0 15px rgba(56,189,248,0.3));">
        <h1 style="font-family: var(--font-display); letter-spacing: 0.3em; margin-top: 20px;">SKEIN</h1>
      </div>
      <h2 style="font-family: var(--font-display); font-size: 10px; color: var(--text-muted); text-transform: uppercase; margin-bottom: 20px;">Enter the Sanctuary</h2>
      <input type="email" id="login-email" placeholder="Email Address">
      <input type="password" id="login-pass" placeholder="Password">
      <button class="btn-primary" onclick="handleLogin()">Authorize Entry</button>
    </div>

    <div id="screen-dashboard" class="screen">
      <h1 style="font-family: var(--font-display);">Grimoire</h1>
      <p style="color: var(--text-muted);">Your threads are syncing...</p>
    </div>
  </div>

  <script is:inline>
    const state = { tokens: null, entries: [] };

    function navigateTo(screenId) {
      document.querySelectorAll('.screen').forEach(s => s.classList.remove('active'));
      const target = document.getElementById(`screen-${screenId}`);
      if (target) target.classList.add('active');
    }

    function handleLogin() {
      const email = document.getElementById('login-email').value;
      if (email) {
        // Simulation of Claude's init() logic
        navigateTo('dashboard');
      }
    }

    // This replaces Claude's init() function to ensure it runs immediately in Astro
    window.addEventListener('DOMContentLoaded', () => {
      console.log("Grimoire Initialized");
      // In the real app, this check tokens/Cognito first
      navigateTo('login');
    });
  </script>
</body>
</html>