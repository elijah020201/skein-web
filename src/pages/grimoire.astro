---
// src/pages/grimoire.astro
layout: null
---
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0, viewport-fit=cover">
  <title>Skein — Grimoire</title>
  
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link href="https://fonts.googleapis.com/css2?family=Cinzel:wght@400;600;700&family=Cormorant+Garamond:ital,wght@0,400;0,500;1,400&display=swap" rel="stylesheet">

  <style is:inline>
    :root {
      --bg: #010214; --surface1: #05081f; --surface2: #0a0e2a; --surface3: #0f1535;
      --border: rgba(80, 90, 180, 0.18); --border-gold: rgba(132, 107, 45, 0.45);
      --gold: #845f2d; --gold-bright: #c8a44a; --action: #1e1461;
      --text-primary: #ebebf7; --text-muted: #7a7fa8; --text-faint: #3d4168;
      --font-display: 'Cinzel', serif; --font-body: 'Cormorant Garamond', serif;
    }

    * { box-sizing: border-box; margin: 0; padding: 0; -webkit-tap-highlight-color: transparent; }
    html, body { 
      height: 100%; background: var(--bg); color: var(--text-primary); 
      font-family: var(--font-body); overflow: hidden; 
    }

    #app { height: 100%; display: flex; flex-direction: column; max-width: 480px; margin: 0 auto; position: relative; }
    .screen { display: none; flex-direction: column; flex: 1; overflow-y: auto; padding: 24px; }
    .screen.active { display: flex; }

    /* Celestial Button Style */
    .btn-primary {
      width: 100%; padding: 14px; background: var(--action); border: 1px solid var(--border-gold);
      color: var(--gold-bright); font-family: var(--font-display); font-size: 11px;
      letter-spacing: 0.2em; cursor: pointer; text-transform: uppercase;
    }

    input {
      width: 100%; background: var(--surface2); border: 1px solid var(--border);
      color: var(--text-primary); font-family: var(--font-body); font-size: 15px;
      padding: 12px; margin-bottom: 16px; outline: none;
    }

    .loading-overlay {
      position: fixed; inset: 0; background: var(--bg); z-index: 1000;
      display: flex; flex-direction: column; align-items: center; justify-content: center;
    }
  </style>
</head>
<body>
  <div id="loading-overlay" class="loading-overlay">
    <img src="/logo.png" style="width: 80px; margin-bottom: 20px; opacity: 0.5;">
    <p style="font-family: var(--font-display); color: var(--gold); letter-spacing: 0.5em; font-size: 10px;">INITIATING SKEIN...</p>
  </div>

  <div id="app">
    <div id="screen-login" class="screen">
      <div style="text-align: center; margin: 40px 0;">
        <img src="/logo.png" style="width: 100px; filter: drop-shadow(0 0 15px rgba(56, 189, 248, 0.3));">
        <h1 style="font-family: var(--font-display); letter-spacing: 0.3em; margin-top: 20px;">SKEIN</h1>
      </div>
      <div class="input-group">
        <p style="font-family: var(--font-display); font-size: 9px; color: var(--text-faint); text-transform: uppercase; margin-bottom: 8px;">Seeker Identity</p>
        <input type="email" id="login-email" placeholder="Email Address">
        <input type="password" id="login-pass" placeholder="Password">
      </div>
      <button class="btn-primary" onclick="handleLogin()">Authorize Entry</button>
      <p style="text-align: center; margin-top: 24px; font-size: 13px; color: var(--text-muted);">
        New to the sanctuary? <span style="color: var(--gold-bright); cursor: pointer;" onclick="navigateTo('register')">Register</span>
      </p>
    </div>

    <div id="screen-dashboard" class="screen">
      <h2 style="font-family: var(--font-display); font-size: 18px; margin-bottom: 20px;">Your Grimoire</h2>
      <div id="entries-container">
        <p style="color: var(--text-faint); text-align: center; margin-top: 40px;">No threads found in your current alignment.</p>
      </div>
    </div>
  </div>

  <script is:inline>
    // THE SKEIN ENGINE
    const Storage = {
      save: (key, val) => localStorage.setItem(`skein_${key}`, JSON.stringify(val)),
      load: (key) => {
        const d = localStorage.getItem(`skein_${key}`);
        try { return d ? JSON.parse(d) : null; } catch(e) { return null; }
      }
    };

    function navigateTo(screenId) {
      document.querySelectorAll('.screen').forEach(s => s.classList.remove('active'));
      const target = document.getElementById(`screen-${screenId}`);
      if (target) target.classList.add('active');
      document.getElementById('loading-overlay').style.display = 'none';
    }

    async function handleLogin() {
      const email = document.getElementById('login-email').value;
      if (email) {
        Storage.save('userEmail', email);
        navigateTo('dashboard');
      } else {
        alert("Identify yourself, seeker.");
      }
    }

    // THE BOOTSTRAP SEQUENCE
    async function init() {
      console.log("Skein: Bootstrap Initiated");
      const userEmail = Storage.load('userEmail');
      
      // Artificial delay to ensure fonts and assets are smooth
      setTimeout(() => {
        if (userEmail) {
          navigateTo('dashboard');
        } else {
          navigateTo('login');
        }
      }, 1000);
    }

    window.addEventListener('DOMContentLoaded', init);
  </script>
</body>
</html>